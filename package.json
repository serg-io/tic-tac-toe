{
  "name": "tic-tac-toe",
  "version": "0.0.1",
  "description": "Tic Tac Toe Web Application",
  "license": "MIT",
  "author": "Sergio Alcantara (https://github.com/serg-io)",
  "homepage": "https://tic-tac-toe.infuse.host/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serg-io/tic-tac-toe.git"
  },
  "scripts": {
    "build": "npm-run-all build-clean build-css build-html build-js",
    "build-clean": "rimraf build",
    "build-css": "npm-run-all build-css-*",
    "build-css-dirs": "mkdirp build/src/css build/dist/css",
    "build-css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/style.scss build/src/css/style.css",
    "build-css-minify": "cleancss --source-map --source-map-inline-sources --skip-rebase --output build/dist/css/style.css build/src/css/style.css",
    "build-html": "npm-run-all build-html-*",
    "build-html-preminify": "html-minifier --collapse-whitespace --remove-comments --input-dir src/html --output-dir build/tmp/html",
    "build-html-esm": "infuse --configs-path \"../js/libs/infuse.host/configs.js\" --cwd build/tmp html/**/*.html build/src",
    "build-html-postminify": "bin/minify.js \"html/**/*.html\" build/src build/dist",
    "build-js": "npm-run-all build-js-*",
    "build-js-libs": "bin/minify.js \"{infuse*,configs,Watch,utils,sweep}.js\" node_modules/infuse.host/src build/dist/js/libs/infuse.host && cpx node_modules/@webcomponents/custom-elements/custom-elements.min.js build/dist/js/libs/",
    "build-js-minify": "bin/minify.js \"js/**/*.js\" src build/dist",
    "build-js-bundle": "webpack -p",
    "lint": "npm-run-all lint-*",
    "lint-css": "stylelint src/scss/**/*.scss",
    "lint-js": "eslint src/js/*.js",
    "start": "npm-run-all build server",
    "server": "node src/server.js",
    "watch": "npm-run-all build-clean --parallel watch-*",
    "watch-css": "nodemon --watch src/scss --ext scss --exec \"npm run lint-css && npm run build-css\"",
    "watch-html": "nodemon --watch src/html --ext html --exec \"npm run build-html\"",
    "watch-js": "nodemon --watch src/js --ext js --exec \"npm run lint-js && npm run build-js\"",
    "watch-server": "nodemon --watch src/server.js --exec \"npm run server\""
  },
  "dependencies": {
    "infuse.host": "^0.3.1",
    "koa": "^2.7.0",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "@webcomponents/custom-elements": "^1.2.1",
    "bootstrap": "^4.3.1",
    "clean-css-cli": "^4.2.1",
    "cpx": "^1.5.0",
    "eslint": "^5.15.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "glob": "^7.1.3",
    "html-minifier": "^3.5.21",
    "infuse-cli": "^0.1.1",
    "infuse-loader": "^0.2.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-twbs-bootstrap": "^0.3.0",
    "terser": "^3.16.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  }
}